{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成活动文件",
            "command": "D:\\MinGW64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\..\\output\\${fileBasenameNoExtension}.exe"
                //"${fileDirname}\\output\\test.exe"//输出文件都是test,可以中文命名
            ],
            "options": {
                "cwd": "D:\\MinGW64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                // "isDefault": true
                "isDefault": false
            },
            "detail": "调试器生成的任务。"
